    <Pattern name="NDIOptotrak" displayName="NDI Optotrak Tracker (Pose)">
        <Description><p xmlns="http://www.w3.org/1999/xhtml">The NDI Optotrak tracker pattern</p></Description>
        <Output>
            <Node name="Ndi" displayName="NDI Optotrak Tracker">
                <Description><p xmlns="http://www.w3.org/1999/xhtml">NDI Optotrak Tracker</p></Description>
            </Node>
            <Node name="Body" displayName="NDI Optotrak Marker">
                <Description><p xmlns="http://www.w3.org/1999/xhtml">NDI Optotrak Marker</p></Description>
            </Node>
            <Edge name="NdiToTarget" displayName="Tracked Transformation" source="Ndi" destination="Body">
                <Attribute name="type" value="6D" xsi:type="EnumAttributeReferenceType"/>
                <Attribute name="mode" value="push" xsi:type="EnumAttributeReferenceType"/>
				<Attribute name="bodyId" displayName="Body ID" min="0" max="255" default="1" xsi:type="IntAttributeDeclarationType">
                    <Description><p xmlns="http://www.w3.org/1999/xhtml">Body ID used in body configuration file (exported by NDI Optotrak Software)</p></Description>
                </Attribute>
                <Attribute name="bodyConf" displayName="Body Configuration File" xsi:type="PathAttributeDeclarationType">
                    <Description><h:p>The path pointing to the body configuration file generated by the NDI Optotrack application.</h:p></Description>
                </Attribute>
				 <Attribute name="FirstMarker" displayName="First Marker" xsi:type="IntAttributeDeclarationType">
                    <Description><h:p>The First Marker used for every body.</h:p></Description>
                </Attribute>
            </Edge>
        </Output>
        <DataflowConfiguration>
            <UbitrackLib class="NDIOptotrakDriver"/>
        </DataflowConfiguration>
    </Pattern>
    
