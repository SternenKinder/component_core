<?xml version="1.0" encoding="UTF-8"?>

<UTQLPatternTemplates xmlns='http://ar.in.tum.de/ubitrack/utql'
                      xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
                      xmlns:xi='http://www.w3.org/2001/XInclude'
                      xmlns:h="http://www.w3.org/1999/xhtml"
                      xsi:schemaLocation='http://ar.in.tum.de/ubitrack/utql ../../../schema/utql_templates.xsd'>
    
    <Pattern name="GPSDriver" displayName="GPS Driver">
        <Description><h:p>This component pushes data from a NMEA-compatible GPS receiver. Output is in 
		meters relative to a reference point. Dataflow configuration looks as follows: 
                    &lt;DataflowConfiguration>
                    &lt;UbitrackLib class="GPSDriver"/>
                    &lt;Port name="/dev/ttyS0" rate="9600"/>
                    &lt;ReferencePoint altitude="503.7" latitude="41.4428333" longitude="41.4428333"/>
                    &lt;/DataflowConfiguration>
        </h:p></Description>
        <Output>
            <Node name="GPSReceiver" displayName="GPS Receiver"/>
            <Node name="GPSReference" displayName="GPS Reference"/>
            
            <Edge name="Output" source="GPSReference" destination="GPSReceiver" displayName="Rotation">
                <Description><h:p>Relative position of GPS receiver with respect to reference point.</h:p></Description>
                <Attribute name="type" value="3DPosition" xsi:type="EnumAttributeReferenceType"/>
            </Edge>
        </Output>
        
        <DataflowConfiguration>
            <UbitrackLib class="GPSDriver"/>
            <Attribute name="port" displayName="Serial Port" xsi:type="StringAttributeDeclarationType">
                <Description><h:p>Port device name (Linux: e.g. /dev/ttyS0, Windows: e.g. COM1).</h:p></Description>
            </Attribute>
            <Attribute name="rate" displayName="Baud Rate" default="9600" xsi:type="DoubleAttributeDeclarationType">
                <Description><h:p>Serial port baud rate.</h:p></Description>
            </Attribute>
            <Attribute name="longitude" displayName="Reference Longitude" xsi:type="DoubleAttributeDeclarationType">
                <Description><h:p>Specify in degrees, e.g. 41 degrees 26.57 minutes north as 41.4428333.</h:p></Description>
            </Attribute>
            <Attribute name="latitude" displayName="Reference Latitude" xsi:type="DoubleAttributeDeclarationType">
                <Description><h:p>Specify in degrees, e.g. 41 degrees 26.57 minutes east as 41.4428333.</h:p></Description>
            </Attribute>
            <Attribute name="altitude" displayName="Reference Altitude" xsi:type="DoubleAttributeDeclarationType">
                <Description><h:p>Specify in meters above sea level.</h:p></Description>
            </Attribute>
        </DataflowConfiguration>
    </Pattern>
    
    <!-- Attribute declarations -->
	
    <GlobalNodeAttributeDeclarations>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/1/1)"/>
    </GlobalNodeAttributeDeclarations>
    
    <GlobalEdgeAttributeDeclarations>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/1)"/>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/2)"/>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/3)"/>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/4)"/>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/5)"/>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/6)"/>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/7)"/>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/8)"/>
    </GlobalEdgeAttributeDeclarations> 
    
