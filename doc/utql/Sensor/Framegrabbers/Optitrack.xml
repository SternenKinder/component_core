<?xml version="1.0" encoding="UTF-8"?>

<UTQLPatternTemplates xmlns='http://ar.in.tum.de/ubitrack/utql'
                      xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
                      xmlns:xi='http://www.w3.org/2001/XInclude'
                      xmlns:h="http://www.w3.org/1999/xhtml"
                      xsi:schemaLocation='http://ar.in.tum.de/ubitrack/utql ../../../schema/utql_templates.xsd'>
    
    <Pattern name="Optitrack" displayName="Optitrack Framegrabber">
        <Description><h:p>This component grabs images from an Optitrack Camera and pushes them.</h:p></Description>
        <Output>
            <Node name="Camera" displayName="Camera"/>
            <Node name="ImageSpace" displayName="Image Plane"/>
            <Edge name="OutputGray" source="Camera" destination="ImageSpace" displayName="Image (monochrome)">
                <Description><h:p>The grayscale camera image (monochrome).</h:p></Description>
                <Attribute name="type" value="Image" xsi:type="EnumAttributeReferenceType"/>
				<Attribute name="mode" value="push" xsi:type="EnumAttributeReferenceType"/>
            </Edge>
			
			 <Edge name="OutputColor" source="Camera" destination="ImageSpace" displayName="Image (RGB)">
                <Description><h:p>The grayscale camera image (RGB-encoded).</h:p></Description>
                <Attribute name="type" value="Image" xsi:type="EnumAttributeReferenceType"/>
				<Attribute name="mode" value="push" xsi:type="EnumAttributeReferenceType"/>
            </Edge>
			
			<Edge name="Positions2D" source="Camera" destination="ImageSpace" displayName="Position List">
                <Description><h:p>2d positions of (retroreflective) objects in the image.</h:p></Description>
                <Attribute name="type" value="2DPositionList" xsi:type="EnumAttributeReferenceType"/>
				<Attribute name="mode" value="push" xsi:type="EnumAttributeReferenceType"/>
            </Edge>
			<Edge name="Intrinsics" source="Camera" destination="ImageSpace" displayName="Intrinsics">
                <Description><h:p>The camera's intrinsics matrix.</h:p></Description>
                <Attribute name="type" value="3x3Matrix" xsi:type="EnumAttributeReferenceType"/>
				<Attribute name="mode" value="pull" xsi:type="EnumAttributeReferenceType"/>
            </Edge>
			<Edge name="Distortion" source="Camera" destination="ImageSpace" displayName="Distortion">
                <Description><h:p>The camera's distortion coefficients.</h:p></Description>
                <Attribute name="type" value="4DVector" xsi:type="EnumAttributeReferenceType"/>
				<Attribute name="mode" value="pull" xsi:type="EnumAttributeReferenceType"/>
            </Edge>
        </Output>
        
        <DataflowConfiguration>
            <UbitrackLib class="OptiTrackCamera"/>
			<Attribute name="cameraUID" default="1" min="1" max="24" displayName="Camera UID" xsi:type="IntAttributeDeclarationType">
                <Description><h:p>This parameters specifies the camera to be choosen. </h:p></Description>
            </Attribute>
			<Attribute name="divisor" default="4" min="1" max="100" displayName="Divisor" xsi:type="IntAttributeDeclarationType">
                <Description><h:p>This parameters specifies the divisor for sending the data. (Optirack runs usually at 120 Hz)</h:p></Description>
            </Attribute>
			<Attribute name="exposure" default="20" min="0" max="800" displayName="Exposure" xsi:type="IntAttributeDeclarationType">
                <Description><h:p>This parameters specifies the camera's exposure time.</h:p></Description>
            </Attribute>
			<Attribute name="intensity" default="15" min="0" max="15" displayName="Flash Intensity" xsi:type="IntAttributeDeclarationType">
                <Description><h:p>This parameters specifies the camera's flash intensity. </h:p></Description>
            </Attribute>
			<Attribute name="threshold" default="0" min="0" max="255" displayName="Threshold" xsi:type="IntAttributeDeclarationType">
                <Description><h:p>This parameters specifies the threshold for object detection. If threshold is set to zero the grascale image will be send out.</h:p></Description>
            </Attribute>
        </DataflowConfiguration>
    </Pattern>
    
    <!-- Attribute declarations -->
	
    <GlobalNodeAttributeDeclarations>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/1/1)"/>
    </GlobalNodeAttributeDeclarations>
    
    <GlobalEdgeAttributeDeclarations>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/1)"/>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/2)"/>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/3)"/>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/4)"/>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/5)"/>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/6)"/>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/7)"/>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/2/8)"/>
    </GlobalEdgeAttributeDeclarations> 
    
    <GlobalDataflowAttributeDeclarations>
        <!-- Unfortunately, the xpointer used in Xinclude is currently restricted to the element scheme and absolute element indices in Xerces (and thus XMLBeans) -->
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/3/1)"/>
        <xi:include href="file:GlobalAttrSpec.xml" xpointer="element(/1/3/2)"/>
    </GlobalDataflowAttributeDeclarations>
    
</UTQLPatternTemplates>

